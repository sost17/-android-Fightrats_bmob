<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/easy_background"
    android:id="@+id/layout"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="积分：00"
        android:textColor="#ff004d"
        android:textSize="3mm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/add20"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hole1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/finght_easymouse" />

            <ImageView
                android:id="@+id/hole2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/have_easymouse" />

            <ImageView
                android:id="@+id/hole3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hole6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/finght_easymouse" />

            <ImageView
                android:id="@+id/hole10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/have_easymouse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hole11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hole16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

            <ImageView
                android:id="@+id/hole20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nothave_mouse" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/add20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add20" />

    <ImageButton
        android:id="@+id/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/open_audio"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/linearLayout3" />

    <ImageView
        android:id="@+id/hammer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hammer"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hammer2" />

    <ImageView
        android:id="@+id/hammer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hammer"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hammer3" />

    <ImageView
        android:id="@+id/hammer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hammer"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hammer4" />

    <ImageView
        android:id="@+id/hammer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hammer"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hammer5" />

    <ImageView
        android:id="@+id/hammer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hammer"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/name_view" />

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="3mm"
        android:textColor="#ff704d"
        android:text="Chronometer"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/audio" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/pause" />

</RelativeLayout>
